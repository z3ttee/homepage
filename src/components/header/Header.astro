---
import { Icon } from "astro-icon/components";
---

<div class="w-full p-window">
  <div class="w-full p-4 text-center bg-indigo-500 rounded">
    <p class="text-body drop-shadow-sm">
      I'm currently building my homepage in a new framework that I'm trying out. This may take a while.
    </p>
  </div>

  <div class="grid grid-cols-3 items-center justify-start w-full h-14">
    <div class="block">
      <!-- Logo for desktop -->
      <a href="/" class="hidden lg:inline-flex items-center justify-start gap-2">
        <img src="/img/branding/logo_dark.svg" alt="Logo" class="w-8 h-8 rounded" />
        <!-- Name for desktop -->
        <p class="hidden lg:block uppercase">Zitzmann<span class="uppercase font-black">.dev</span></p>
      </a>

      <!-- Menu button for mobile devices -->
      <button class="inline-flex lg:hidden items-center gap-2 py-1 px-2 rounded text-xs">
        <Icon size={24} name="ph:dots-nine-bold" />Menu
      </button>
    </div>

    <div class="flex items-center justify-center">
      <!-- Desktop nav -->
      <nav class="hidden lg:inline-flex items-center justify-center gap-4">
        <a class="text-sm font-semibold opacity-80">About me</a>
        <a class="text-sm font-semibold opacity-80">Skills</a>
        <a class="text-sm font-semibold opacity-80">Projects</a>
      </nav>

      <!-- Logo for mobile -->
      <a href="/" class="inline-flex lg:hidden gap-2 border">
        <img src="/img/branding/logo_dark.svg" alt="Logo" class="w-8 h-8 rounded" />
      </a>
    </div>

    <div class="flex items-center justify-end">
      <!-- <div>German</div> -->
      <button class="inline-flex items-center justify-start gap-1 py-2 px-4 bg-body-on text-body text-xs rounded">
        Get In Touch
        <Icon name="ph:arrow-square-out-duotone" class="w-5 h-5" />
      </button>
    </div>
  </div>
</div>
