<style>
  .square-pattern {
    --pattern-thickness: 1px;
    --pattern-square-size: 30px;

    height: 100%;
    width: 100%;

    opacity: 0.1;
    background-image: linear-gradient(#000 var(--pattern-thickness), transparent var(--pattern-thickness)),
      linear-gradient(to right, #000 var(--pattern-thickness), transparent var(--pattern-thickness));
    background-size: var(--pattern-square-size) var(--pattern-square-size);
  }

  .square-fade {
    --fade-color: hsl(50, 72%, 97%);
    background: radial-gradient(transparent 0%, var(--fade-color) 80%);
    pointer-events: none;
  }
</style>
