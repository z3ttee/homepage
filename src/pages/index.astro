---
import Pattern from "../components/pattern/Pattern.astro";
import SocialItem from "../components/social-item/SocialItem.astro";
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const PAGE_TITLE = "Hi, I'm Cedric Zitzmann";
---

<Layout title={PAGE_TITLE}>
  <div class="flex flex-col items-center justify-center lg:h-[100vh] w-full pb-window">
    <div class="flex flex-col-reverse lg:gap-0 lg:grid grid-cols-[2fr,1fr] w-full h-full items-center">
      <!-- Short profile -->
      <div class="w-full">
        <h1 class="text-center text-4xl md:text-6xl lg:text-left lg:text-7xl font-black">Cedric Zitzmann</h1>
        <p class="text-center text-base md:text-lg lg:text-left mt-2 lg:px-2">Full-Stack Software Engineer</p>

        <ul class="flex items-center justify-center lg:justify-start mt-10 lg:mt-20 gap-6 px-1 opacity-80">
          <SocialItem href="https://www.linkedin.com/in/cedric-zitzmann">
            <Icon class="w-7 h-7" name="ph:linkedin-logo" />
            <span class="text-sm hidden sm:inline">/cedric-zitzmann</span>
          </SocialItem>
          <SocialItem href="https://github.com/z3ttee">
            <Icon class="w-7 h-7" name="ph:github-logo" />
            <span class="text-sm hidden sm:inline">/z3ttee</span>
          </SocialItem>
        </ul>
      </div>
      <!-- Picture -->
      <div class="w-96 h-96 lg:h-[50%] lg:w-full">
        <Pattern />
      </div>
    </div>
  </div>
</Layout>

<style lang="scss" is:global>
  @font-face {
    font-family: "Noto Serif";
    src: url("/fonts/noto_serif/noto_serif.ttf") format("truetype");
    font-optical-sizing: auto;
    font-weight: 100 900;
    font-style: normal;
    font-variation-settings: "wdth" 100;
    font-display: swap;
  }

  * {
    font-family: "Noto Serif", serif;
    font-weight: 500;
    box-sizing: border-box;
  }

  html,
  body {
    width: 100%;
    height: 100%;
    @apply text-body-on;
  }
</style>
