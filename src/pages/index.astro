---
import Pattern from "../components/pattern/Pattern.astro";
import ProjectListSection from "../components/sections/ProjectListSection.astro";
import QuoteSection from "../components/sections/QuoteSection.astro";
import SkillsListSection from "../components/sections/SkillsListSection.astro";
import SocialItem from "../components/social-item/SocialItem.astro";
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import Container from "../components/container/Container.astro";
import { translate } from "../i18n/helpers";
---

<Layout title={translate("page.title")}>
  <Container>
    <div class="flex flex-col items-center justify-center lg:h-[100vh] w-full">
      <div class="flex flex-col-reverse lg:gap-0 lg:grid grid-cols-[2fr,1fr] w-full h-full items-center">
        <!-- Short profile -->
        <div class="w-full">
          <h1 class="text-center text-4xl md:text-6xl lg:text-left lg:text-7xl font-black">
            {translate("section.about.name")}
          </h1>
          <p class="text-center text-base md:text-lg lg:text-left mt-2 lg:px-2">{translate("section.about.subtext")}</p>

          <ul class="flex items-center justify-center lg:justify-start mt-10 lg:mt-20 gap-6 px-1 opacity-80">
            <SocialItem href="https://www.linkedin.com/in/cedric-zitzmann">
              <Icon class="w-7 h-7" name="ph:linkedin-logo" />
              <span class="text-sm hidden sm:inline">{translate("socials.linkedin.label")}</span>
            </SocialItem>
            <SocialItem href="https://github.com/z3ttee">
              <Icon class="w-7 h-7" name="ph:github-logo" />
              <span class="text-sm hidden sm:inline">{translate("socials.github.label")}</span>
            </SocialItem>
          </ul>
        </div>
        <!-- Picture -->
        <div class="w-96 h-96 lg:h-[50%] lg:w-full">
          <Pattern />
        </div>
      </div>
    </div>
  </Container>

  <ProjectListSection />
  <SkillsListSection />
  <QuoteSection />
</Layout>
